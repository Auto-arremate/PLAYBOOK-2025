    </button>

    <!-- Modal para o Certificado -->
    <div id="certificateModal" class="modal">
        <div class="modal-content">
            <span class="close-button" id="closeCertificateModal">&times;</span>
            <h2 class="certificate-title"><span class="emoji-original-color">🏆</span> CERTIFICADO DE MESTRE DA PISTA <span class="emoji-original-color">🥇</span></h2>
            <img src="https://placehold.co/600x400/16B097/FFFFFF?text=CERTIFICADO&font=manrope" alt="Certificado de Conclusão da Trilha" class="certificate-image">
            <p class="certificate-text">ESTE CERTIFICADO CONFIRMA QUE <strong class="text-aa-green-darker">VOCÊ</strong> CONCLUIU A TRILHA DE APRENDIZADO COM SUCESSO!</p>
            <p class="certificate-score">PONTUAÇÃO FINAL: <span id="modalScore">0</span> PONTOS</p>
            <p class="certificate-text">ASSINADO DIGITALMENTE PELA EQUIPE <span class="text-aa-green-darker">AUTO ARREMATE</span> & <span class="text-arremaq-orange-darker">ARREMAQ</span>.</p>
        </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Inicializar Animate on Scroll
            AOS.init({ duration: 700, once: true, offset: 50 });

            // --- Seletores de Elementos ---
            const allSections = document.querySelectorAll('main > section');
            const capaSection = document.getElementById('capa-section');
            const menuPrincipalSection = document.getElementById('menu-principal-section');
            const trilhaAprendizadoSection = document.getElementById('trilha-aprendizado-section');
            const arremaqContentSection = document.getElementById('arremaq-content-section');
            const placeholderContentSection = document.getElementById('placeholder-content-section');
            const quizSection = document.getElementById('quiz-section');
            const certificateSection = document.getElementById('certificate-section');


            const btnIniciarCapa = document.getElementById('btnIniciarCapa');
            const backToCoverBtnMenu = document.getElementById('backToCoverBtnMenu');
            const openTrilhaAprendizadoBtn = document.getElementById('openTrilhaAprendizadoBtn');
            const backToMenuPrincipalBtns = document.querySelectorAll('.backToMenuPrincipalBtn');
            const backToTrilhaAprendizadoBtns = document.querySelectorAll('.backToTrilhaAprendizadoBtn');

            const progressBarFill = document.getElementById('progressBarFill');
            const progressBarLabel = document.getElementById('progressBarLabel');

            const currentScoreDisplay = document.getElementById('currentScoreDisplay');
            const finalScoreDisplay = document.getElementById('finalScoreDisplay');
            const modalScore = document.getElementById('modalScore');
            const completeModuleBtn = document.getElementById('completeModuleBtn');
            const generateCertificateBtn = document.getElementById('generateCertificateBtn');
            const certificateModal = document.getElementById('certificateModal');
            const closeCertificateModal = document.getElementById('closeCertificateModal');

            // --- Gerenciamento de Estado ---
            let currentModuleIndex = 0;
            let totalModules = 0;
            let userScore = 0; // Pontuação do usuário
            let completedModules = JSON.parse(localStorage.getItem('completedModules')) || {}; // Rastreia módulos completos
            let dictionaryTerms = JSON.parse(localStorage.getItem('dictionaryTerms')) || [
                { term: "ALIENAÇÃO FIDUCIÁRIA", definition: "GARANTIA DE UM BEM (VEÍCULO) EM UM FINANCIAMENTO. O BEM PERTENCE AO CREDOR ATÉ A QUITAÇÃO DA DÍVIDA.", emoji: "📝" },
                { term: "B2B (BUSINESS-TO-BUSINESS)", definition: "MODELO DE NEGÓCIO ONDE AS TRANSAÇÕES COMERCIAIS OCORREM EXCLUSIVAMENTE ENTRE EMPRESAS.", emoji: "🤝" },
                { term: "CAC (CUSTO DE AQUISIÇÃO DE CLIENTE)", definition: "CUSTO TOTAL DE MARKETING E VENDAS PARA CONQUISTAR UM NOVO CLIENTE.", emoji: "💸" },
                { term: "CADÊNCIA", definition: "SEQUÊNCIA E FREQUÊNCIA DE CONTATOS (E-MAILS, LIGAÇÕES) EM UM PROCESSO DE PROSPECÇÃO.", emoji: "⏳" },
                { term: "CRM (CUSTOMER RELATIONSHIP MNGMT)", definition: "SOFTWARE PARA GERENCIAR E ANALISAR AS INTERAÇÕES COM CLIENTES E PROSPECTS.", emoji: "📊" },
                { term: "ICP (IDEAL CUSTOMER PROFILE)", definition: "PERFIL DE CLIENTE IDEAL. DESCRIÇÃO DA EMPRESA QUE MAIS SE BENEFICIA E GERA VALOR COM SUA SOLUÇÃO.", emoji: "🎯" },
                { term: "KPI (KEY PERFORMANCE INDICATOR)", definition: "INDICADOR-CHAVE DE DESEMPENHO. MÉTRICAS USADAS PARA AVALIAR O SUCESSO DE UMA ATIVIDADE.", emoji: "📈" },
                { term: "LEAD QUALIFICADO", definition: "PROSPECT QUE SE ENCAIXA NO PERFIL DE CLIENTE IDEAL E DEMONSTRA INTERESSE NA SOLUÇÃO.", emoji: "💡" },
                { term: "MARKETPLACE B2B", definition: "PLATAFORMA ONLINE ONDE EMPRESAS PODEM VENDER E COMPRAR PRODUTOS/SERVIÇOS DE OUTRAS EMPRESAS.", emoji: "🌐" },
                { term: "MQL (MARKETING QUALIFIED LEAD)", definition: "LEAD QUE FOI QUALIFICADO PELO TIME DE MARKETING E ESTÁ PRONTO PARA SER ENVIADO PARA VENDAS.", emoji: "📧" },
                { term: "PDGC", definition: "SIGLA PARA OS PILARES DA AUTO ARREMATE: PRECIFICAÇÃO, DIVULGAÇÃO, GESTÃO E COMERCIALIZAÇÃO.", emoji: "✨" },
                { term: "PERSONA", definition: "REPRESENTAÇÃO SEMI-FICTÍCIA DO SEU CLIENTE IDEAL, COM DETALHES SOBRE SEUS OBJETIVOS, DORES E COMPORTAMENTO.", emoji: "🎭" },
                { term: "RAIOX / RAIOX+", definition: "FERRAMENTAS DE INSPEÇÃO DIGITAL E CONSULTA DE HISTÓRICO VEICULAR DA AUTO ARREMATE.", emoji: "🔎" },
                { term: "RAPPORT", definition: "CRIAÇÃO DE UMA CONEXÃO DE CONFIANÇA E EMPATIA COM O PROSPECT NO INÍCIO DA CONVERSA.", emoji: "🤝" },
                { term: "REMARKETING", definition: "PROCESSO DE VENDA DE VEÍCULOS PROVENIENTES DE FROTAS DE LOCADORAS APÓS O FIM DO CICLO DE USO.", emoji: "🔄" },
                { term: "REPASSE", definition: "VENDA DE VEÍCULOS DO ESTOQUE DE UMA CONCESSIONÁRIA PARA OUTROS LOJISTAS OU REVENDEDORES (B2B).", emoji: "💰" },
                { term: "SAAS (SOFTWARE AS A SERVICE)", definition: "SOFTWARE COMO SERVIÇO. MODELO DE NEGÓCIO ONDE A SOLUÇÃO É ACESSADA ONLINE VIA ASSINATURA.", emoji: "☁️" },
                { term: "SDR (SALES DEVELOPMENT REP)", definition: "PROFISSIONAL FOCADO NA PROSPECÇÃO E QUALIFICAÇÃO INICIAL DE LEADS PARA O TIME DE VENDAS.", emoji: "📞" },
                { term: "WORKFLOWS", definition: "FLUXOS DE TRABALHO AUTOMATIZADOS PARA OTIMIZAR PROCESSOS DE VENDAS E MARKETING.", emoji: "⚙️" }
            ];
            

            /**
             * Oculta todas as seções principais e mostra a especificada.
             * @param {HTMLElement} sectionToShow A seção a ser visível.
             */
            function showSection(sectionToShow) {
                allSections.forEach(s => {
                    if (s) s.classList.add('hidden');
                });

                if (sectionToShow) {
                    sectionToShow.classList.remove('hidden');
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                    AOS.refreshHard(); // Re-inicializa AOS para novos elementos

                    // Ajusta o tema de acordo com a seção, se necessário (ex: Arremaq tem tema distinto)
                    if (sectionToShow === arremaqContentSection) {
                        document.documentElement.setAttribute('data-current-section-theme', 'arremaq');
                    } else {
                        document.documentElement.removeAttribute('data-current-section-theme');
                    }
                    applyTheme(document.documentElement.getAttribute('data-theme') || 'light'); // Reaplicar tema para atualizar cores
                }
            }

            // --- Listeners de Eventos de Navegação ---
            if (btnIniciarCapa) {
                btnIniciarCapa.addEventListener('click', (e) => {
                    e.preventDefault();
                    showSection(menuPrincipalSection);
                });
            }
            if (backToCoverBtnMenu) {
                backToCoverBtnMenu.addEventListener('click', (e) => {
                    e.preventDefault();
                    showSection(capaSection);
                });
            }
            if (openTrilhaAprendizadoBtn) {
                openTrilhaAprendizadoBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    showSection(trilhaAprendizadoSection);
                    renderTrilhaIndex();
                    updateProgressBar();
                });
            }
            backToMenuPrincipalBtns.forEach(button => {
                button.addEventListener('click', (e) => {
                    e.preventDefault();
                    showSection(menuPrincipalSection);
                });
            });
            backToTrilhaAprendizadoBtns.forEach(button => {
                 button.addEventListener('click', (e) => {
                    e.preventDefault();
                    showSection(trilhaAprendizadoSection);
                    updateProgressBar(); // Atualiza a barra ao voltar para a trilha
                });
            });

            // --- Dados do Índice da Trilha de Aprendizado (Atualizados) ---
            const indexDataTrilha = [
                { emoji: "📜", title: "<strong>MÓDULO 1</strong>: NOSSA PISTA DE DECOLAGEM", sub: "CONHEÇA O MOTOR QUE IMPULSIONA A AUTO ARREMATE & ARREMAQ: NOSSA CULTURA, MISSÃO E O TIME DE CAMPEÕES.", contentId: "pista-decolagem-section", completed: false },
                { emoji: "🚗", title: "<strong>MÓDULO 2</strong>: AUTO ARREMATE NA POLE POSITION", sub: "DESCUBRA COMO NOSSA PLATAFORMA ACELERA A GESTÃO E VENDA DE VEÍCULOS LEVES, DA CAPTAÇÃO À COMERCIALIZAÇÃO.", contentId: "auto-arremate-content-section", completed: false },
                { emoji: "🚜", title: "<strong>MÓDULO 3</strong>: ARREMAQ", sub: "SOLUÇÕES DE PESO E ESTRATÉGIAS ROBUSTAS PARA O REPASSE EFICIENTE DE MÁQUINAS AGRÍCOLAS E DE CONSTRUÇÃO.", contentId: "arremaq-content-section", completed: false },
                { emoji: "🎯", title: "<strong>MÓDULO 4</strong>: MAPEANDO OS CAMPEÕES", sub: "IDENTIFIQUE OS PERFIS DE CLIENTES COM MAIOR POTENCIAL E AS PERSONAS CHAVE PARA UMA ABORDAGEM ESTRATÉGICA.", contentId: "mapeando-campeoes-section", completed: false },
                { emoji: "📊", title: "<strong>MÓDULO 5</strong>: A JORNADA DO CLIENTE VENCEDOR", sub: "VISUALIZE A TRANSFORMAÇÃO DO CLIENTE, DA NECESSIDADE À SOLUÇÃO, ATRAVÉS DE NOSSA ANIMAÇÃO DINÂMICA.", contentId: "placeholder-content-section", completed: false },
                { emoji: "🚀", title: "<strong>MÓDULO 6</strong>: ACELERAÇÃO TÁTICA TOTAL", sub: "SEU CENTRO DE COMANDO PARA CONECTAR, QUALIFICAR E CONVERTER. TODAS AS ESTRATÉGIAS, PARA TODAS AS PERSONAS, EM UM SÓ LUGAR.", contentId: "placeholder-content-section", completed: false },
                { emoji: "✍️", title: "<strong>MÓDULO 7</strong>: A ARTE DA COMUNICAÇÃO ESTRATÉGICA", sub: "TERMOS DE IMPACTO, ORIENTAÇÕES E EXEMPLOS PRÁTICOS PARA UMA COMUNICAÇÃO PERSUASIVA E EFICAZ.", contentId: "arte-comunicacao-section", completed: false },
                { emoji: "📖", title: "<strong>MÓDULO 8</strong>: DICIONÁRIO DOS MESTRES", sub: "DECIFRE OS TERMOS TÉCNICOS E JARGÕES DO MERCADO PARA DOMINAR A LINGUAGEM DO SETOR.", contentId: "dicionario-mestres-section", completed: false },
                { emoji: "📈", title: "<strong>MÓDULO 9</strong>: EVOLUÇÃO CONTÍNUA", sub: "OS PRÓXIMOS PASSOS PARA O DESENVOLVIMENTO DO PLAYBOOK E O CRESCIMENTO CONTÍNUO DA NOSSA EQUIPE.", contentId: "evolucao-continua-section", completed: false },
                { emoji: "📞", title: "<strong>MÓDULO 10</strong>: CENTRAL DE COMANDO", sub: "ACESSE NOSSOS CANAIS DE SUPORTE DEDICADOS E ENCONTRE AJUDA RÁPIDA PARA SUAS DÚVIDAS E DESAFIOS.", contentId: "central-comando-section", completed: false },
                { emoji: "❓", title: "<strong>MÓDULO 11</strong>: QUIZ DO MÓDULO (TESTE SEU CONHECIMENTO!)", sub: "TESTE SEU CONHECIMENTO ESTRATÉGICO EM NOSSO QUIZ GAMIFICADO SOBRE A TRILHA!", contentId: "quiz-section", completed: false },
                { emoji: "🏅", title: "<strong>MÓDULO FINAL</strong>: CERTIFICADO DE CONCLUSÃO", sub: "RECEBA SEU CERTIFICADO E CELEBRE SUA CONQUISTA AO FINALIZAR A TRILHA DE APRENDIZADO!", contentId: "certificate-section", completed: false },
            ];

            totalModules = indexDataTrilha.length;
            const trilhaIndexContainer = document.getElementById('trilhaIndexContainer');

            /**
             * Renderiza os cartões de índice da trilha no container.
             */
            function renderTrilhaIndex() {
                if (!trilhaIndexContainer) return;
                trilhaIndexContainer.innerHTML = ''; // Limpa o conteúdo anterior

                indexDataTrilha.forEach((item, index) => {
                    const card = document.createElement('div');
                    card.className = 'index-item-card';
                    card.setAttribute('data-aos', 'fade-up');

                    // Atualiza o status de conclusão do módulo com base no localStorage
                    item.completed = completedModules[item.contentId] || false;
                    const completedClass = item.completed ? 'opacity-60 border-l-green-500' : '';
                    const completedEmoji = item.completed ? '<span class="emoji-in-text text-green-500">✅</span>' : '';

                    let emojiHtml = item.emoji.includes("<span") ? item.emoji : `<span class="emoji-original-color">${item.emoji}</span>`;

                    card.innerHTML = `
                        <span class="index-item-emoji">${emojiHtml}</span>
                        <h3 class="index-item-title">${item.title}</h3>
                        <p class="index-item-sub">
                            ${completedEmoji}
                            ${item.sub}
                        </p>`;

                    // Adiciona listener de clique para mostrar a seção de conteúdo correta
                    card.addEventListener('click', () => {
                        currentModuleIndex = index; // Atualiza o índice do módulo atual
                        const targetContentSection = document.getElementById(item.contentId);
                        if (targetContentSection) {
                            if (item.contentId === 'placeholder-content-section') {
                                document.getElementById('content-title-placeholder').innerHTML = item.title;
                                document.getElementById('content-paragraph-placeholder').innerText = "CONTEÚDO PARA ESTA SEÇÃO ESTÁ EM DESENVOLVIMENTO. VOLTE EM BREVE!";
                            } else if (item.contentId === 'quiz-section') {
                                document.getElementById('quiz-title').innerHTML = `<span class="emoji-original-color">❓</span> QUIZ DO MÓDULO ${index + 1}: TESTE SEU CONHECIMENTO!`;
                                updateQuizScoreDisplay();
                            } else if (item.contentId === 'certificate-section') {
                                displayFinalScore();
                            } else if (item.contentId === 'dicionario-mestres-section') {
                                renderDictionaryTerms(); // Renderiza o dicionário ao abrir a seção
                            }
                            showSection(targetContentSection);
                        }
                    });

                    trilhaIndexContainer.appendChild(card);
                });
                 AOS.refresh();
            }

            // Função para navegar entre os módulos
            function navigateModules(direction) {
                let nextIndex = currentModuleIndex + direction;

                if (nextIndex >= 0 && nextIndex < indexDataTrilha.length) {
                    currentModuleIndex = nextIndex;
                    const nextModule = indexDataTrilha[currentModuleIndex];
                    const targetContentSection = document.getElementById(nextModule.contentId);
                    if (targetContentSection) {
                         if (nextModule.contentId === 'placeholder-content-section') {
                            document.getElementById('content-title-placeholder').innerHTML = nextModule.title;
                            document.getElementById('content-paragraph-placeholder').innerText = "CONTEÚDO PARA ESTA SEÇÃO ESTÁ EM DESENVOLVIMENTO. VOLTE EM BREVE!";
                        } else if (nextModule.contentId === 'quiz-section') {
                            document.getElementById('quiz-title').innerHTML = `<span class="emoji-original-color">❓</span> QUIZ DO MÓDULO ${currentModuleIndex + 1}: TESTE SEU CONHECIMENTO!`;
                            updateQuizScoreDisplay();
                        } else if (nextModule.contentId === 'certificate-section') {
                            displayFinalScore();
                        } else if (nextModule.contentId === 'dicionario-mestres-section') {
                            renderDictionaryTerms();
                        }
                        showSection(targetContentSection);
                    }
                } else if (nextIndex === totalModules) { // Se for o último módulo e tentar avançar, leva para o certificado
                     currentModuleIndex = totalModules - 1; // Ajusta para o último módulo
                     showSection(certificateSection);
                     displayFinalScore();
                }
            }
            // Adiciona listeners para os botões de navegação dentro das seções de conteúdo
            document.querySelectorAll('.navigation-buttons .btn-nav.prev').forEach(button => {
                button.addEventListener('click', () => navigateModules(-1));
            });
            document.querySelectorAll('.navigation-buttons .btn-nav.next').forEach(button => {
                button.addEventListener('click', () => navigateModules(1));
            });


            // --- Barra de Progresso ---
            function updateProgressBar() {
                const completedCount = Object.values(completedModules).filter(status => status).length;
                const progressPercentage = (completedCount / totalModules) * 100;
                progressBarFill.style.width = `${progressPercentage}%`;
                progressBarLabel.innerText = `${Math.round(progressPercentage)}% COMPLETO`;
                localStorage.setItem('userScore', userScore); // Salva a pontuação
            }

            // --- Gerenciamento de Pontuação e Conclusão de Módulo ---
            function updateQuizScoreDisplay() {
                currentScoreDisplay.innerText = `${userScore} PONTOS`;
                // Desabilita o botão se o módulo já foi completado
                if (completedModules[indexDataTrilha[currentModuleIndex].contentId]) {
                    completeModuleBtn.disabled = true;
                    completeModuleBtn.innerText = 'MÓDULO JÁ COMPLETO';
                } else {
                    completeModuleBtn.disabled = false;
                    completeModuleBtn.innerHTML = '<span class="emoji-in-text">✅</span> MARCAR MÓDULO COMO COMPLETO (GANHAR 100 PONTOS)';
                }
            }

            if (completeModuleBtn) {
                completeModuleBtn.addEventListener('click', () => {
                    const currentModuleId = indexDataTrilha[currentModuleIndex].contentId;
                    if (!completedModules[currentModuleId]) {
                        userScore += 100;
                        completedModules[currentModuleId] = true;
                        localStorage.setItem('completedModules', JSON.stringify(completedModules));
                        updateQuizScoreDisplay();
                        updateProgressBar();
                        completeModuleBtn.disabled = true;
                        completeModuleBtn.innerText = 'MÓDULO COMPLETO!';
                        // Opcional: Animar a pontuação
                        // console.log(`Módulo ${currentModuleIndex + 1} completo! Pontuação: ${userScore}`);
                    }
                });
            }

            function displayFinalScore() {
                finalScoreDisplay.innerText = `${userScore} PONTOS`;
                modalScore.innerText = userScore;
            }

            // --- Geração de Certificado (Modal) ---
            if (generateCertificateBtn) {
                generateCertificateBtn.addEventListener('click', () => {
                    certificateModal.classList.add('show');
                });
            }
            if (closeCertificateModal) {
                closeCertificateModal.addEventListener('click', () => {
                    certificateModal.classList.remove('show');
                });
            }
            // Fechar modal ao clicar fora do conteúdo
            window.addEventListener('click', (event) => {
                if (event.target === certificateModal) {
                    certificateModal.classList.remove('show');
                }
            });


            // --- Dicionário: Renderização e Adição de Termos ---
            const newTermInput = document.getElementById('newTermInput');
            const newDefinitionInput = document.getElementById('newDefinitionInput');
            const newEmojiInput = document.getElementById('newEmojiInput');
            const addTermBtn = document.getElementById('addTermBtn');
            const alphabeticalTermsContainer = document.getElementById('alphabeticalTermsContainer');

            function renderDictionaryTerms() {
                alphabeticalTermsContainer.innerHTML = ''; // Limpa o conteúdo anterior
                const sortedTerms = [...dictionaryTerms].sort((a, b) => a.term.localeCompare(b.term, 'pt-BR'));

                let currentLetter = '';
                let currentLetterDiv = null;

                const alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".split('');
                const termsByLetter = {};
                alphabet.forEach(letter => termsByLetter[letter] = []);
                sortedTerms.forEach(term => {
                    const firstLetter = term.term.charAt(0).toUpperCase();
                    if (termsByLetter[firstLetter]) {
                        termsByLetter[firstLetter].push(term);
                    }
                });

                alphabet.forEach(letter => {
                    const termsForLetter = termsByLetter[letter];
                    if (termsForLetter.length > 0) {
                        const letterCard = document.createElement('div');
                        letterCard.className = 'alphabet-card';
                        letterCard.setAttribute('data-aos', 'fade-up');
                        letterCard.innerHTML = `
                            <div class="alphabet-letter">${letter}</div>
                            <div class="alphabet-count">${termsForLetter.length} TERMO(S)</div>
                        `;
                        alphabeticalTermsContainer.appendChild(letterCard);

                        const termsListDiv = document.createElement('div');
                        termsListDiv.className = 'grid grid-cols-1 md:grid-cols-2 gap-4 mt-4 mb-8';
                        termsListDiv.setAttribute('data-aos', 'fade-up');
                        termsForLetter.forEach(term => {
                            const termCard = document.createElement('div');
                            termCard.className = 'dictionary-term-card';
                            termCard.innerHTML = `
                                <h4 class="dictionary-term-title"><span class="dictionary-term-emoji">${term.emoji}</span> ${term.term}</h4>
                                <p class="dictionary-term-description">${term.definition}</p>
                            `;
                            termsListDiv.appendChild(termCard);
                        });
                        alphabeticalTermsContainer.appendChild(termsListDiv);
                    }
                });
                AOS.refresh();
            }

            if (addTermBtn) {
                addTermBtn.addEventListener('click', () => {
                    const term = newTermInput.value.trim().toUpperCase();
                    const definition = newDefinitionInput.value.trim().toUpperCase();
                    const emoji = newEmojiInput.value.trim();

                    if (term && definition) {
                        dictionaryTerms.push({ term, definition, emoji: emoji || '📚' }); // Emoji padrão se não fornecido
                        localStorage.setItem('dictionaryTerms', JSON.stringify(dictionaryTerms));
                        renderDictionaryTerms();
                        newTermInput.value = '';
                        newDefinitionInput.value = '';
                        newEmojiInput.value = '';
                    } else {
                        // Poderia usar um modal customizado para feedback em vez de alert()
                        console.error('POR FAVOR, PREENCHA O TERMO E A DEFINIÇÃO.');
                    }
                });
            }


            // --- Alternador de Tema ---
            const htmlEl = document.documentElement;
            const themeToggleBtn = document.getElementById('themeToggleBtn');
            const moonIcon = '<i class="fas fa-moon"></i>';
            const sunIcon = '<i class="fas fa-sun"></i>';

            function applyTheme(theme) {
                htmlEl.setAttribute('data-theme', theme);
                if (themeToggleBtn) {
                    themeToggleBtn.innerHTML = theme === 'dark' ? sunIcon : moonIcon;

                    if (document.documentElement.getAttribute('data-current-section-theme') === 'arremaq') {
                        themeToggleBtn.setAttribute('data-arremaq-theme', 'true');
                    } else {
                        themeToggleBtn.removeAttribute('data-arremaq-theme');
                    }
                }
            }

            let storedTheme = null;
            try { storedTheme = localStorage.getItem('theme'); } catch (e) { console.warn("LocalStorage não disponível para persistência de tema.");}
            const preferredTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            applyTheme(storedTheme || preferredTheme);

            if (themeToggleBtn) {
                themeToggleBtn.addEventListener('click', () => {
                    const newTheme = htmlEl.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
                    applyTheme(newTheme);
                    try { localStorage.setItem('theme', newTheme); } catch (e) { console.warn("LocalStorage não disponível para persistência de tema."); }
                });
            }

            // --- Acessibilidade: Controles de Tamanho de Fonte ---
            const increaseFontBtn = document.getElementById('increaseFontBtn');
            const decreaseFontBtn = document.getElementById('decreaseFontBtn');
            const FONT_STEP_PERCENT = 10;
            const MIN_HTML_FONT_PERCENT = 60;
            const MAX_HTML_FONT_PERCENT = 140;

            function getCurrentHtmlFontSizePercent() {
                const currentSizePx = parseFloat(window.getComputedStyle(htmlEl).fontSize);
                const browserBaseSizePx = 16; // Tamanho de fonte padrão do navegador
                return (currentSizePx / browserBaseSizePx) * 100;
            }

            if (increaseFontBtn) {
                increaseFontBtn.addEventListener('click', () => {
                    let currentPercent = getCurrentHtmlFontSizePercent();
                    let newPercent = currentPercent + FONT_STEP_PERCENT;
                    htmlEl.style.fontSize = Math.min(newPercent, MAX_HTML_FONT_PERCENT) + '%';
                });
            }
            if (decreaseFontBtn) {
                decreaseFontBtn.addEventListener('click', () => {
                    let currentPercent = getCurrentHtmlFontSizePercent();
                    let newPercent = currentPercent - FONT_STEP_PERCENT;
                    htmlEl.style.fontSize = Math.max(newPercent, MIN_HTML_FONT_PERCENT) + '%';
                });
            }

            // --- Acessibilidade: Leitura de Texto (Text-to-Speech) ---
            const readPageBtn = document.getElementById('readPageBtn');
            const synth = window.speechSynthesis;
            if (readPageBtn && synth) {
                readPageBtn.addEventListener('click', () => {
                    if (synth.speaking) {
                        synth.cancel();
                        readPageBtn.innerHTML = '<i class="fas fa-volume-up"></i>';
                        return;
                    }
                    let activeSection = document.querySelector('section:not(.hidden)');
                    if (!activeSection) return;

                    let textToRead = Array.from(activeSection.querySelectorAll('h1, h2, h3, h4, p, strong, .menu-card-title, .index-item-title, .index-item-sub, .valor-card-text, .pdgc-title, .pdgc-description, .superpower-title, .superpower-description, .highlight p, .highlight-box-arremaq .highlight-text'))
                        .map(el => el.textContent.trim())
                        .join('. ');

                    if (!textToRead) return;

                    let utterance = new SpeechSynthesisUtterance(textToRead);
                    utterance.lang = 'pt-BR';
                    utterance.onstart = () => { readPageBtn.innerHTML = '<i class="fas fa-stop-circle"></i>'; };
                    utterance.onend = () => { readPageBtn.innerHTML = '<i class="fas fa-volume-up"></i>'; };
                    utterance.onerror = (event) => { console.error('SpeechSynthesis Error:', event.error); readPageBtn.innerHTML = '<i class="fas fa-volume-up"></i>'; };
                    synth.speak(utterance);
                });
            } else if (readPageBtn) {
                readPageBtn.style.display = 'none'; // Oculta o botão se a API não for suportada
            }

            // Inicializa a pontuação e barra de progresso ao carregar a página
            userScore = parseInt(localStorage.getItem('userScore')) || 0;
            updateProgressBar();
            renderTrilhaIndex(); // Garante que o índice é renderizado na carga inicial

        });
    </script>
</body>
</html>
